<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorGray</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="buttonStyle">@style/SearchFilmButton</item>
    </style>

    <style name="SearchFilmButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_search_film</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SearchFilmTitle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchFilmDescription">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="bgColor">#000000</item>
        <item name="textColor">#aeaeae</item>
        <item name="metaTextColor">#ffffff</item>
        <item name="bottomNavigationBg">#221D1D</item>
        <item name="bottomNavigationIcon">#ffffff</item>
        <item name="decorationLine">#3A3838</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="bgColor">@color/grayLight</item>
        <item name="textColor">@color/colorGray</item>
        <item name="metaTextColor">#000000</item>
        <item name="bottomNavigationBg">#ffffff</item>
        <item name="bottomNavigationIcon">@color/colorGray</item>
        <item name="decorationLine">#ffffff</item>
    </style>
</resources>
